dns_config() {
local domain="$1"
local subdomain="$2"
local script

script=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION:/ {getline; print}')
echo "$subdomain $script" | awk '{print "The subdomain " $1 " is a " $2 " record and points to " $3}'
}

if [ "$#" == 1 ]; then
dns_config "$1" "www"
dns_config "$1" "lb-01"
dns_config "$1" "web-01"
dns_config "$1" "web-02"
elif [ "$#" == 2 ]; then
dns_config "$1" "$2"
fi
